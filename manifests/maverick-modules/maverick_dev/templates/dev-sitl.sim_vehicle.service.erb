[Unit]
Description=Maverick Dev ArduPilot SITL
After=network-online.target
Requires=network-online.target

[Service]
TimeoutStartSec=0
ExecStart=/bin/bash -c 'cd /srv/maverick/.virtualenvs/sitl; source bin/activate; source /srv/maverick/data/config/dev-sitl.conf; /usr/bin/screen -L -c /srv/maverick/data/config/dev-sitl.screen.conf -S dev-sitl -d -m /srv/maverick/code/ardupilot/Tools/autotest/sim_vehicle.py -N -v <%= @ardupilot_type %> -I 1 -m $MAVPROXY_ARGS'
User=mav
Type=forking

[Install]
WantedBy=multi-user.target

