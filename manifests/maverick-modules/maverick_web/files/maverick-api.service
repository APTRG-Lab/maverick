[Unit]
Description=Maverick API Service
After=network-online.target multi-user.target
Requires=network-online.target multi-user.target

[Service]
TimeoutStartSec=0
WorkingDirectory=/srv/maverick/code/maverick-api
ExecStart=/srv/maverick/code/maverick-api/maverick-api
User=mav
TimeoutStartSec=20
Restart=on-failure

[Install]
WantedBy=multi-user.target

